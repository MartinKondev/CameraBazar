@model Camera
<table class="camera-details-component">
    <tr>
        <td rowspan="2">
            <img src="@Model.ImageUrl" class="camera-thumbnail" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.CameraMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Model)
        </td>
        <td>
            $ @Html.DisplayFor(modelItem => Model.Price)
        </td>
    </tr>
    <tr>
        <td>
            <a asp-action="Details" asp-route-id="@Model.Id">Details</a>
        </td>
        <td colspan="2" class="stock-info">
            @{if (Model.IsInStock)
                {
                    <span>IN STOCK</span>
                }
                else
                {
                    <span>OUT OF STOCK</span>
                }
            }
        </td>
    </tr>
</table>

